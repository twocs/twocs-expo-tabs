
{
  "name": "expo-typescript-theme-template",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "description": "Expo Router + TypeScript template with dark/light theme management and comprehensive development tooling",
  "keywords": [
    "expo",
    "react-native",
    "typescript",
    "theme",
    "template",
    "expo-router",
    "dark-mode",
    "eslint",
    "prettier",
    "jest"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/twocs/expo-typescript-theme-template.git"
  },
  "bugs": {
    "url": "https://github.com/twocs/expo-typescript-theme-template/issues"
  },
  "homepage": "https://github.com/twocs/expo-typescript-theme-template#readme",
  "author": "Tom Anderson <twocs@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "test:ci": "jest --no-watchAll --passWithNoTests",
    "lint": "expo lint",
    "lint:fix": "expo lint --fix",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "bash scripts/validate.sh",
    "update-docs": "bash scripts/fetch-llm-docs.sh",
    "clean": "rm -rf .expo && rm -rf node_modules/.cache",
    "upgrade:check": "npx expo install --check",
    "upgrade:fix": "npx expo install --fix",
    "upgrade:doctor": "npx expo-doctor",
    "upgrade:sdk": "npm install expo@latest",
    "upgrade:full": "npm run upgrade:sdk && npm run upgrade:fix && npm run upgrade:doctor"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.history/",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/native": "^7.1.6",
    "expo": "^54.0.21",
    "expo-font": "~14.0.9",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.14",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.8",
    "expo-web-browser": "~15.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@cspell/dict-html-symbol-entities": "^4.0.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/react": "~19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.0.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.2.1",
    "jest-expo": "~54.0.13",
    "markdownlint-cli": "^0.46.0",
    "prettier": "^3.5.3",
    "typescript": "~5.9.2"
  },
  "private": true
}
